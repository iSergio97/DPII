<tiles-definitions>

	<!-- Users can list tutorials -->

	<definition name="tutorial/list" extends="master.page">
		<put-attribute name="title" value="List tutorials" />
		<put-attribute name="body" value="/views/tutorial/list.jsp" />
	</definition>

	<!-- Handy workers can list their tutorials -->

	<definition name="tutorial/handy-worker/list" extends="master.page">
		<put-attribute name="title" value="List tutorials" />
		<put-attribute name="body" value="/views/tutorial/listhandyworker.jsp" />
	</definition>

	<!-- Users can display a tutorial -->

	<definition name="tutorial/display" extends="master.page">
		<put-attribute name="title" value="Display tutorial" />
		<put-attribute name="body" value="/views/tutorial/display.jsp" />
	</definition>

	<!-- Handy workers can edit a tutorial -->

	<definition name="tutorial/handy-worker/edit" extends="master.page">
		<put-attribute name="title" value="Edit tutorial" />
		<put-attribute name="body" value="/views/tutorial/edit.jsp" />
	</definition>

